#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔨 Running pre-commit build check..."

# Run the Vercel build to ensure everything works
npm run vercel-build

if [ $? -ne 0 ]; then
  echo "❌ Build failed! Please fix the issues before committing."
  exit 1
fi

echo "✅ Build successful! Proceeding with commit..."
